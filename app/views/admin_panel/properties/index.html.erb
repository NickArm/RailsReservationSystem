<div class="card">
  <div class="card-header">
    <h3 class="card-title">Properties</h3>
  </div>
  <div class="card-body">
    <table id="all-properties-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Country</th>
          <th>Contact Email</th>
          <th>Max Guests</th>
          <th>Actions</th>
          <th>Calendar</th>
        </tr>
      </thead>
      <tbody>
        <% @properties.each do |property| %>
          <tr>
            <td><%= property.name %></td>
            <td><%= property.phone %></td>
            <td><%= property.address %></td>
            <td><%= property.country %></td>
            <td><%= property.contact_email %></td>
            <td><%= property.max_guests %></td>
            <td>
              <%= link_to "View", admin_panel_property_path(property), class: "btn btn-primary btn-sm" %>
              <%= link_to "Edit", edit_admin_panel_property_path(property), class: "btn btn-warning btn-sm" %>
              <%= link_to "Delete", admin_panel_property_path(property), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
            <td>
              <%= link_to "Calendar", property_calendars_path(property), class: "btn btn-info btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
