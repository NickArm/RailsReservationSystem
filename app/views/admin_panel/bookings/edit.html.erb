<div class="container mt-5">
  <h1>Edit Booking</h1>
  <%= form_with(model: [:admin_panel, @booking], local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Guest Name", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :phone, "Phone", class: "form-label" %>
      <%= f.text_field :phone, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :start_date, "Start Date", class: "form-label" %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :end_date, "End Date", class: "form-label" %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :guest_count, "Guest Count", class: "form-label" %>
      <%= f.number_field :guest_count, class: "form-control" %>
    </div>
    <div class="mb-3">
    <%= f.label :status, "Status", class: "form-label" %>
    <%= f.collection_select :status, ReservationStatus.all, :id, :name, {}, class: "form-control" %>
  </div>
  



    <div class="mb-3">
      <%= f.label :payment_method_id, "Payment Method", class: "form-label" %>
      <%= f.collection_select :payment_method_id, @payment_methods, :id, :name, {}, class: "form-control" %>
    </div>
    <%= f.submit "Save Changes", class: "btn btn-primary" %>
  <% end %>
</div>
