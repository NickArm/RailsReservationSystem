<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h3 class="mb-0">
        <i class="fas fa-edit"></i> Edit Booking
      </h3>
    </div>
    <div class="card-body">
      <%= form_with(model: [:admin_panel, @booking], local: true) do |f| %>
        <div class="row">
          <!-- Guest Information -->
          <div class="col-md-6">
            <h5 class="mb-3 text-primary">
              <i class="fas fa-user-circle"></i> Guest Information
            </h5>
            <div class="mb-3">
              <%= f.label :customer_name, "Guest Name", class: "form-label" %>
              <%= f.text_field :customer_name, value: @booking.customer.name, class: "form-control", disabled: true %>
            </div>
            <div class="mb-3">
              <%= f.label :customer_email, "Email", class: "form-label" %>
              <%= f.email_field :customer_email, value: @booking.customer.email, class: "form-control", disabled: true %>
            </div>
            <div class="mb-3">
              <%= f.label :customer_phone, "Phone", class: "form-label" %>
              <%= f.text_field :customer_phone, value: @booking.customer.phone, class: "form-control", disabled: true %>
            </div>
            <div class="mb-3">
              <%= f.label :customer_address, "Address", class: "form-label" %>
              <%= f.text_area :customer_address, value: @booking.customer.address, class: "form-control", disabled: true %>
            </div>
            <div class="mb-3">
              <%= f.label :customer_country, "Country", class: "form-label" %>
              <%= f.text_field :customer_country, value: @booking.customer.country, class: "form-control", disabled: true %>
            </div>
            <div class="mb-3">
              <%= f.label :customer_city, "City", class: "form-label" %>
              <%= f.text_field :customer_city, value: @booking.customer.city, class: "form-control", disabled: true %>
            </div>
            <div class="mb-3">
              <%= f.label :customer_zip_code, "ZIP Code", class: "form-label" %>
              <%= f.text_field :customer_zip_code, value: @booking.customer.zip_code, class: "form-control", disabled: true %>
            </div>
          </div>

          <!-- Booking Details -->
          <div class="col-md-6">
            <h5 class="mb-3 text-primary">
              <i class="fas fa-calendar-alt"></i> Booking Details
            </h5>
            <div class="mb-3">
              <%= f.label :start_date, "Start Date", class: "form-label" %>
              <%= f.date_field :start_date, value: @booking.start_date, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :end_date, "End Date", class: "form-label" %>
              <%= f.date_field :end_date, value: @booking.end_date, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :guest_count, "Guest Count", class: "form-label" %>
              <%= f.number_field :guest_count, value: @booking.guest_count, class: "form-control", min: 1 %>
            </div>
          </div>
        </div>

        <hr>

        <!-- Status and Payment -->
        <div class="row">
          <div class="col-md-6">
            <h5 class="mb-3 text-primary">
              <i class="fas fa-info-circle"></i> Status
            </h5>
            <div class="mb-3">
              <%= f.label :status, "Status", class: "form-label" %>
              <%= f.collection_select :status, ReservationStatus.all, :id, :name, { selected: @booking.status }, class: "form-select" %>
            </div>
          </div>
          <div class="col-md-6">
            <h5 class="mb-3 text-primary">
              <i class="fas fa-wallet"></i> Payment Information
            </h5>
            <div class="mb-3">
              <%= f.label :payment_method_id, "Payment Method", class: "form-label" %>
              <%= f.collection_select :payment_method_id, @payment_methods, :id, :name, { selected: @booking.payment_method_id }, class: "form-select" %>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
          <%= f.submit "Save Changes", class: "btn btn-success btn-lg w-50" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
