<table id="bookings-table" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Property</th>
                <th>Guest Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if @bookings.any? %>
                <% @bookings.each_with_index do |booking, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= booking.property.name %></td>
                    <td><%= booking.customer.name %></td>
                    <td><%= booking.customer.email %></td>
                    <td><%= booking.customer.phone %></td>
                    <td><%= booking.start_date.strftime("%Y-%m-%d") %></td>
                    <td><%= booking.end_date.strftime("%Y-%m-%d") %></td>
                    <td>
                      <span class="badge">
                       <%= booking.reservation_status&.name || 'Unknown/Problem' %>
                      </span>
                    </td>
                    <td class="text-center">
                      <%= link_to admin_panel_booking_path(booking), class: "btn btn-info btn-sm text-white" do %>
                        <i class="fas fa-eye"></i> View
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="9" class="text-center">No bookings available</td>
                </tr>
              <% end %>
            </tbody>
          </table>

</div>
