<%= link_to "Add New Customer", new_admin_panel_customer_path, class: "btn btn-success mb-3" %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Customers</h3>
  </div>
  <div class="card-body">
    <table id="all-customers-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Country</th>
          <th>Contact Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.address %></td>
            <td><%= customer.country %></td>
            <td><%= customer.email %></td>
            <td>
              <%= link_to "Edit", edit_admin_panel_customer_path(customer), class: "btn btn-warning btn-sm" %>
              <% if customer.bookings.exists? %>
                <%= link_to "Reservations", reservations_admin_panel_customer_path(customer), class: "btn btn-info btn-sm" %>
               <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
