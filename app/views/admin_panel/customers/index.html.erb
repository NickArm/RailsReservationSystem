<%= link_to "Add New Customer", new_admin_panel_customer_path, class: "btn btn-success mb-3" %>
  
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Country</th>
      <th>Contact Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.address %></td>
        <td><%= customer.country %></td>
        <td><%= customer.email %></td>
        <td>
          <%= link_to "Edit", edit_admin_panel_customer_path(customer), class: "btn btn-warning btn-sm" %>
          <%= link_to "Reservations", reservations_admin_panel_customer_path(customer), class: "btn btn-info btn-sm" %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
