<div class="container mt-5">
  <h1>Search for Properties</h1>
  <%= form_with url: search_path, method: :get, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :start_date, "Start Date", class: "form-label" %>
      <%= form.date_field :start_date, class: "form-control", placeholder: "YYYY-MM-DD" %>
    </div>
    <div class="mb-3">
      <%= form.label :end_date, "End Date", class: "form-label" %>
      <%= form.date_field :end_date, class: "form-control", placeholder: "YYYY-MM-DD" %>
    </div>
    <div class="mb-3">
      <%= form.label :guest_count, "Number of Guests", class: "form-label" %>
      <%= form.number_field :guest_count, class: "form-control", min: 1, max: Property.maximum(:max_guests) %>
    </div>
    <%= form.submit "Search", class: "btn btn-primary" %>
  <% end %>
</div>
